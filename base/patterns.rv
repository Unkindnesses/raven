data Pattern {
  Literal(x)
  Data(xs...)
  Bind(name)
}

fn match(val, data(`Literal`, pat)) {
  if (pat == val) {
    return simpledict()
  } else {
    return nil
  }
}

fn match(val, data(`Bind`, name)) {
  bs = simpledict()
  setkey(&bs, name, val)
  return bs
}

fn match(data(x, y), data(`Data`, a, b)) {
  bs = match(x, a)
  isnil(bs) && return nil
  cs = match(y, b)
  isnil(cs) && return nil
  return merge(notnil(bs), notnil(cs))
}

fn ismatch(val, pat) {
  not(isnil(match(val, pat)))
}
