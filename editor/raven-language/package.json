{
    "name": "raven-language",
    "displayName": "Raven",
    "description": "Raven language support",
    "version": "0.0.1",
    "publisher": "MikeInnes",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
	"activationEvents": [
        "onLanguage:raven"
    ],
	"main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "raven",
                "aliases": [
                    "Raven",
                    "raven"
                ],
                "extensions": [
                    ".rv"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "raven",
                "scopeName": "source.raven",
                "path": "./syntaxes/raven.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "[raven]": {
                "editor.tabSize": 2,
                "editor.insertSpaces": true
            }
        },
        "keybindings": [
            {
              "key": "space",
              "when": "editorFocus && editorLangId == raven",
              "command": "raven.space"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "js-yaml syntaxes/raven.tmLanguage.yaml > syntaxes/raven.tmLanguage.json && tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
