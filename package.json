{
  "name": "@unkindnesses/raven",
  "version": "0.3.0",
  "type": "module",
  "files": [
    "dist",
    "common"
  ],
  "bin": {
    "raven": "dist/cli/index.js"
  },
  "scripts": {
    "build": "esbuild --platform=node --sourcemap --bundle --format=esm --external:commander --outdir=dist/cli src/cli/index.ts src/cli/worker.ts src/cli/exec.ts",
    "watch": "npm run build -- --watch",
    "start": "npm run build && node --enable-source-maps --experimental-wasm-jspi dist/cli/index.js",
    "test": "npm run build && node --max-old-space-size=8192 --enable-source-maps --experimental-wasm-jspi ./node_modules/uvu/bin.js -r tsx test -i '^(?!.*\\.ts$).*'"
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/node": "^22.15.3",
    "assert": "^2.0.0",
    "esbuild": "^0.25.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "uvu": "^0.5.6"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
