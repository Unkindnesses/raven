{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "webworker"],
    "types": [],
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "tsBuildInfoFile": "./dist/tsconfig.web.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["src/cli", "test"]
}
