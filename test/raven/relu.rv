fn relu(x) {
  if x > 0 {
    x
  } else {
    0
  }
}

println(relu(widen(5)) == 5)
println(relu(widen(-5)) == 0)

fn fib(n) {
  if (n <= 1) {
    return n
  } else {
    return fib(n-1) + fib(n-2)
  }
}

println(fib(20) == 6765)

# Return-value casting
fn test(c) {
  if c {
    return "true"
  } else {
    return "false"
  }
}

println(test(widen(true)) == "true")
println(test(widen(true)) != "false")
println(test(widen(false)) == "false")

println(`foo` == `foo`)
println(`foo` != `bar`)
